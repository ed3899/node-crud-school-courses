{
  "name": "prisma-project",
  "version": "1.0.0",
  "description": "A Node.js CRUD app with Hapi(Backend), Prisma(ORM) PostgreSQL(Database) and Typescript for domain modeling",
  "main": "index.ts",
  "scripts": {
    "build": "tsc --project tsconfig.json",
    "db:deploy": "prisma migrate deploy",
    "serve": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "test": "jest",
    "db:reset": "prisma migrate reset",
    "db:seed": "ts-node prisma/seed.ts",
    "db:migrate": "prisma migrate dev",
    "db:model": "prisma generate",
    "db:studio": "prisma studio --port 1111",
    "db:setup": "npm run db:reset && npm run db:seed && npm run db:migrate && npm run db:model"
  },
  "keywords": [],
  "author": "Eduardo Alfredo Casanova Lope",
  "license": "ISC",
  "devDependencies": {
    "@jest/globals": "^29.5.0",
    "@tsconfig/node18": "^2.0.1",
    "@types/hapi": "^18.0.8",
    "@types/node": "^20.2.3",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "@hapi/boom": "^10.0.1",
    "@hapi/hapi": "^21.3.2",
    "@prisma/client": "^4.14.1",
    "prisma": "^4.14.1",
    "date-fns": "^2.30.0",
    "joi": "^17.9.2"
  },
  "engines": {
    "node": ">=18.x"
  }
}
