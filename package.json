{
  "name": "prisma-project",
  "version": "1.0.0",
  "description": "A Node.js CRUD app with Hapi(Backend), Prisma(ORM) PostgreSQL(Database) and Typescript for domain modeling",
  "main": "index.ts",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "prisma_seed": "ts-node prisma/seed.ts",
    "prisma_cleandb": "ts-node prisma/cleandb.ts",
    "prisma_studio": "prisma studio --port 1111",
    "prisma_migrate": "prisma migrate dev",
    "prisma_gen_client": "prisma generate",
    "prisma_schema_setup": "npm run prisma_migrate && npm run prisma_gen_client",
    "serve": "ts-node-dev --respawn --transpile-only src/index.ts"
  },
  "keywords": [],
  "author": "Eduardo Alfredo Casanova Lope",
  "license": "ISC",
  "devDependencies": {
    "@tsconfig/node18": "^2.0.1",
    "@types/node": "^20.2.3",
    "jest": "^29.5.0",
    "prisma": "^4.14.1",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "@hapi/boom": "^10.0.1",
    "@hapi/hapi": "^21.3.2",
    "@prisma/client": "^4.14.1",
    "@types/hapi": "^18.0.8",
    "date-fns": "^2.30.0",
    "joi": "^17.9.2"
  }
}
